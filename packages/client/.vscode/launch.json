    "version": "0.2.0",
    "configurations": [
        {
            "name": "tentura (Dev, debug)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "toolArgs": [
                "--flavor",
                "prod",
				"--dart-define-from-file=.env",
				"--dart-define",
				"SERVER_NAME=https://dev.tentura.io",
				"--dart-define",
				"NEED_INVITE_CODE=true",
            ],
        },
        {
            "name": "tentura (local)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "toolArgs": [
                "--flavor",
                "prod",
				"--dart-define-from-file=.env",
				"--dart-define",
                "SERVER_NAME=https://localhost",
				"--dart-define",
				"NEED_INVITE_CODE=true",
            ],
        },
        {
            "name": "tentura-web (local)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "toolArgs": [
				"--dart-define-from-file=.env",
                "--dart-define",
                "SERVER_NAME=https://localhost",
            ],
            "args": [
                "-d", "chrome",
                "--web-port", "8888",
