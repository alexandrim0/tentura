{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "flutter: build web (wasm)",
			"type": "flutter",
			"command": "flutter",
			"args": [
				"build",
				"web",
				"--wasm",
				"--dart-define",
				"APP_LINK_BASE=dev.tentura.io"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "packages/client"
    	},
		},
		{
			"label": "flutter: build apk (prod)",
			"type": "flutter",
			"command": "flutter",
			"args": [
				"build",
				"apk",
				"--flavor",
				"prod",
				"--target-platform",
				"android-arm64",
				"--split-per-abi",
				"--no-tree-shake-icons",
				"--dart-define",
				"APP_LINK_BASE=dev.tentura.io"
			],
			"group": {
				"kind": "build",
			},
			"options": {
				"cwd": "packages/client"
    	},
		},
		{
			"label": "flutter: build web (js)",
			"type": "flutter",
			"command": "flutter",
			"args": [
				"build",
				"web",
				"--dart-define",
				"APP_LINK_BASE=dev.tentura.io",
			],
			"group": {
				"kind": "build",
			},
			"options": {
				"cwd": "packages/client"
    	},
		},
		{
			"label": "flutter: build widgetbook",
			"type": "flutter",
			"command": "flutter",
			"args": [
				"build",
				"web",
				"--wasm",
				"--base-href",
				"/widgetbook/",
				"--pwa-strategy",
				"none",
				"--dart-define",
				"APP_LINK_BASE=dev.tentura.io"
			],
			"group": {
				"kind": "build",
			},
			"options": {
				"cwd": "packages/widgetbook"
    	},
		},
		{
			"label": "flutter: build web (wasm, stage)",
			"type": "flutter",
			"command": "flutter",
			"args": [
				"build",
				"web",
				"--wasm",
				"--dart-define",
				"APP_LINK_BASE=stage.tentura.io"
			],
			"group": {
				"kind": "build",
			},
			"options": {
				"cwd": "packages/client"
    	},
		},
	],
}