{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "tentura (debug)",
            "request": "launch",
            "cwd": "packages/client",
            "type": "dart",
            "flutterMode": "debug",
            "toolArgs": [
                "--flavor",
                "prod",
				"--dart-define-from-file=.env",
            ],
        },
        {
            "name": "tentura-web (debug)",
            "request": "launch",
            "cwd": "packages/client",
            "type": "dart",
            "flutterMode": "debug",
            "toolArgs": [
				"--dart-define-from-file=.env",
            ],
            "args": [
                "-d", "chrome",
                "--web-port", "8888",
                "--web-browser-flag=--disable-web-security",
            ]
        },
        {
            "name": "tentura-stage (debug)",
            "request": "launch",
            "cwd": "packages/client",
            "type": "dart",
            "flutterMode": "debug",
            "toolArgs": [
                "--flavor",
                "stage",
                "--dart-define",
                "SERVER_NAME=https://stage.tentura.io",
                "--dart-define",
				"IMAGE_SERVER=https://tentura.ams3.cdn.digitaloceanspaces.com",
            ],
        },
        {
            "name": "tentura (profile)",
            "request": "launch",
            "cwd": "packages/client",
            "type": "dart",
            "flutterMode": "profile",
            "toolArgs": [
                "--flavor",
                "prod",
				"--dart-define-from-file=.env",
            ],
        },
        {
            "name": "tentura (release)",
            "request": "launch",
            "cwd": "packages/client",
            "type": "dart",
            "flutterMode": "release",
            "toolArgs": [
                "--flavor",
                "prod",
				"--dart-define-from-file=.env",
            ],
        },
        {
            "name": "tentura-wasm (release)",
            "request": "launch",
            "cwd": "packages/client",
            "type": "dart",
            "flutterMode": "release",
            "toolArgs": [
                "--wasm",
				"--dart-define-from-file=.env",
            ],
            "args": [
                "-d", "chrome",
                "--wasm",
                "--web-port", "8888",
                "--web-browser-flag=--disable-web-security",
            ]
        },
        {
            "name": "tentura (widgetbook)",
            "request": "launch",
            "cwd": "packages/widgetbook",
            "type": "dart",
            "toolArgs": [
                "--dart-define",
                "IS_IMPORTED=true",
				"--dart-define-from-file=.env",
            ],
            "args": [
                "-d", "chrome",
                "--web-port", "8888",
                "--web-browser-flag=--disable-web-security",
            ]
        },
        {
            "console": "debugConsole",
            "cwd": "packages/server",
            "name": "tentura-server",
            "program":"bin/tentura.dart",
            "request": "launch",
            "type": "dart",
            "env": {
                "DEBUG_MODE": "true",
                "SERVER_NAME": "https://dev.tentura.io",
                "IMAGE_SERVER": "https://tentura.ams3.cdn.digitaloceanspaces.com",
                "S3_ENDPOINT": "ams3.digitaloceanspaces.com",
                "S3_BUCKET": "tentura",
            },
        },
  ],
}